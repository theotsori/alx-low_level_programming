CC = gcc

SRC = main.c school.c

OBJ = $(SRC:%.c=%.o)

NAME = school

CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

$(OBJ): %.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	@find . \( -name "*~" -o -name "\#*\#" -o -name "$(NAME)" -o -name "*.o" \) -type f -delete

oclean:
	$(RM) $(OBJ)

fclean: clean
    $(RM) $(NAME)

re: fclean all
