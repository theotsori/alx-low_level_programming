CC := gcc
CFLAGS := -Wall -Werror -Wextra -pedantic
NAME := school

SRC-DIR := src
OBJ_DIR := obj

SRC := $(wildcard $(SRC_DIR)/*.c)

OBJ := $(patsubst $(SRC_DIR)/%.c, $(OBJ_DIR)/%.o, $(SRC))

RM := rm -f

.PHONY: all clean fclean oclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $^ -o $@

$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c | m.h
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
